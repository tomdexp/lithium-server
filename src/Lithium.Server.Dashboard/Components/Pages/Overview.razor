@page "/servers/{ServerId}/overview"

<div class="flex flex-col gap-8">
    @if (_server is not null)
    {
        <h1 class="text-2xl font-bold text-white">@_server.Name</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <StatCard Title="Status" Value="@_server.Status.ToString()" Icon="power" />
            <StatCard Title="Total Players" Value="1,234" Icon="users" />
            <StatCard Title="Uptime" Value="99.9%" Icon="timer" />
            <StatCard Title="CPU Load" Value="15%" Icon="cpu" />
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
            <div class="xl:col-span-2 flex flex-col gap-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    @* <ResourceChart Title="CPU Usage" Data="_cpuData" LineColor="#8b5cf6" /> *@
                    @* <ResourceChart Title="Memory Usage" Data="_memoryData" LineColor="#ec4899" /> *@
                </div>
            </div>
            <div class="xl:col-span-1">
                @* <ActivityFeed Items="_activityItems" /> *@
            </div>
        </div>
    }
    else
    {
        <p class="text-white/60">Loading server data...</p>
    }
</div>