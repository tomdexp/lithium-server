@page "/servers/{ServerId:long}/console"
@rendermode InteractiveServer

<div class="flex flex-col h-full">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold text-white">Server Console</h1>
            <p class="text-white/60 text-sm mt-1">Monitor and control your server instance.</p>
        </div>
        <div class="flex gap-2">
            <button
                class="flex items-center gap-2 px-4 py-2 bg-lithium-100 hover:bg-lithium-200 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer">
                <MaterialIcon>restart_alt</MaterialIcon>
                Restart
            </button>
            <button
                class="flex items-center gap-2 px-4 py-2 bg-red-500/10 hover:bg-red-500/20 text-red-500 text-sm font-medium rounded-lg transition-colors border border-red-500/20 cursor-pointer">
                <MaterialIcon>stop</MaterialIcon>
                Stop
            </button>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="flex items-center gap-4 h-14 mb-4 p-2 bg-lithium-50/50 rounded-lg border border-white/5">
        <div class="h-full flex items-center gap-2">
            <button
                class="flex items-center gap-2 px-3 h-full bg-lithium-100/60 hover:bg-lithium-100 text-white/80 hover:text-white text-xs font-medium rounded-md transition-colors cursor-pointer">
                <MaterialIcon Class="text-base!">delete</MaterialIcon>
                Clear
            </button>
            <label
                class="w-full h-full bg-lithium-100/60 hover:bg-lithium-100 rounded-md transition-colors flex items-center gap-2 text-xs text-white/60 cursor-pointer hover:text-white select-none px-3">
                <div class="relative flex items-center justify-center w-4 h-4">
                    <input type="checkbox" checked
                           class="peer w-full h-full rounded appearance-none bg-white/5 border-2 border-white/10 checked:bg-lithium-300 checked:border-lithium-400 focus:outline-none transition-all"/>
                    <MaterialIcon
                        Class="text-sm! absolute opacity-0 peer-checked:opacity-100 pointer-events-none transition-opacity text-lithium-950">
                        check
                    </MaterialIcon>
                </div>
                <span>Auto Scroll</span>
            </label>
        </div>

        <div class="flex items-center gap-2 text-xs border-l border-white/10 pl-4">
            <span class="text-white/40 uppercase font-bold tracking-wider text-[10px]">Filters:</span>
            <button
                class="px-2 py-1 rounded bg-blue-500/20 text-blue-300 border border-blue-500/30 hover:bg-blue-500/30 transition-colors cursor-pointer">
                Info
            </button>
            <button
                class="px-2 py-1 rounded bg-yellow-500/20 text-yellow-300 border border-yellow-500/30 hover:bg-yellow-500/30 transition-colors cursor-pointer">
                Warn
            </button>
            <button
                class="px-2 py-1 rounded bg-red-500/20 text-red-300 border border-red-500/30 hover:bg-red-500/30 transition-colors cursor-pointer">
                Error
            </button>
        </div>

        <div class="ml-auto flex items-center gap-4">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <MaterialIcon class="text-white/40 text-base!">search</MaterialIcon>
                </div>
                <input type="text" placeholder="Search logs..."
                       class="w-64 bg-lithium-100/60 border border-white/10 focus:border-white/20 outline-none rounded-md pl-9 pr-3 py-1.5 text-sm text-white placeholder:text-white/30 transition-colors"/>
            </div>
            <div class="flex items-center gap-2 text-xs text-white/40" title="Connection Status">
                <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                <span>Connected</span>
            </div>
        </div>
    </div>

    <div class="grow">
        <ServerConsole/>
    </div>
</div>

@code {

    [Inject] private ILogger<Console> Logger { get; set; } = null!;
    [Parameter] public long ServerId { get; set; }

}